<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="img/favicon.ico" />
    <title>
        <%= pageTitle %>
    </title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/result.css">

</head>

<body>
    <main>
        <div class="search resultInput">
            <a href="/"><img src="/img/logo.png" alt="WoWoW"></a>
            <form action="search" method="get" class="form">
                <input type="search" name="q" id="q" value="<%=qury %>" />
                <input type="hidden" value="web" name="t" id="t" />
                <input type="hidden" value="desktop" name="device" id="device" />
                <input type="hidden" value="1" name="safesearch" id="safesearch" />
                <input type="hidden" value="en_IN" name="locale" id="locale" />
                <input type="hidden" value="4" name="uiv" id="uiv" />
                <button class="btn" type="submit"></button>
            </form>
        </div>
        <% for(var i=0; i <items.length; i++) { %>
            <div class="results">
                <img src="<%= items[i].favicon ? items[i].favicon : ''  %>"
                    alt="<%= items[i].favicon ? items[i].title : '' %>">

                <a href="<%= items[i].url %>" class="title">
                    <h3>
                        <%= items[i].title %>
                    </h3>
                </a>
                <a href="<%= items[i].url %>" class="urlstyle">
                    <%= items[i].url %>
                </a>
                <p>
                    <%= items[i].desc %>
                </p>
            </div>
            <% } %>
    </main>
</body>

</html>