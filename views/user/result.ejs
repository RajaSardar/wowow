<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="img/favicon.ico" />
    <title>
        <%= pageTitle %>
    </title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/result.css">

</head>

<body>
    <main>
        <% for(var i=0; i <items.length; i++) { %>
            <div class="results">
                <img src="<%= items[i].favicon ? items[i].favicon : ''  %>"
                    alt="<%= items[i].favicon ? items[i].title : '' %>">

                <a href="<%= items[i].url %>" class="title">
                    <h3>
                        <%= items[i].title %>
                    </h3>
                </a>
                <a href="<%= items[i].url %>">
                    <%= items[i].url %>
                </a>
                <p>
                    <%= items[i].desc %>
                </p>
            </div>
            <% } %>
    </main>
</body>

</html>